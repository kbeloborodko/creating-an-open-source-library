{
  "name": "open-source-library",
  "version": "1.0.0",
  "description": "A boilerplate for making an open source library",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "nyc mocha",
    "watch:test": "mocha --watch",
    "validate": "npm-run-all --parallel lint test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kbeloborodko/open-source-library-boilerplate.git"
  },
  "keywords": [
    "open",
    "source",
    "boilerplate"
  ],
  "author": "Kirill Beloborodko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kbeloborodko/open-source-library-boilerplate/issues"
  },
  "homepage": "https://github.com/kbeloborodko/open-source-library-boilerplate#readme",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "eslint-config-kentcdodds": "^11.1.0",
    "ghooks": "^2.0.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.0.0"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
