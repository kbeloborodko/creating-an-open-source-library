{
  "name": "open-source-library",
  "version": "1.0.0",
  "description": "A boilerplate for making an open source library",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:main build:umd build:umd.min",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "lint": "eslint src",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "report-coverage": "minicat ./coverage/lcov.info | codecov",
    "watch:test": "mocha --watch",
    "validate": "npm-run-all --parallel lint test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kbeloborodko/open-source-library-boilerplate.git"
  },
  "keywords": [
    "open",
    "source",
    "boilerplate"
  ],
  "files": [
    "dist"
  ],
  "author": "Kirill Beloborodko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kbeloborodko/open-source-library-boilerplate/issues"
  },
  "homepage": "https://github.com/kbeloborodko/open-source-library-boilerplate#readme",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "cross-env": "^3.1.4",
    "eslint": "^3.13.1",
    "eslint-config-kentcdodds": "^11.1.0",
    "ghooks": "^2.0.0",
    "json-loader": "^0.5.4",
    "minicat": "^1.0.0",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "webpack": "^1.14.0"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
